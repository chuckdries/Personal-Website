<div class="project-thumb">
  <% if (post.cover) { %>
    <div style="
      width: 100%;
      height: 210px;
      background-image: url(<%= post.cover %>);
      background-size: cover;
      background-position: center center;
      background-repeat: no-repeat;
      ">
    </div>
  <% } %>
  <div class="thumb-text">
    <h3><%= post.title %></h3>
    <%- post.excerpt %>
    <a href="<%= post.path %>">Read More</a>
  </div>
</div>